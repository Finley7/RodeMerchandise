{% extends 'base.html.twig' %}

{% block content %}

    <main class="container">
        <div class="row">
            <div class="col-12">
                <div class="card mt-4">
                    <form method="post">
                    <input type="hidden" name="_token" value="{{ csrf_token('member_merchandise') }}">
                    <div class="card-body">
                        <div class="row landing-row">
                            <div class="col-md-4 col-xs-12">
                                {{ 'landing.about_text'|trans }}
                            </div>
                            <div class="col-md-4 col-xs-12">
                                <label for="birthDate">{{ 'landing.label.birthday'|trans }}</label>
                                <input class="form-control" name="birthday" type="date" id="birthDate">
                            </div>
                            <div class="col-md-4 col-xs-12">
                                <label for="memberNumber">{{ 'landing.label.member_number'|trans }}</label>
                                <input class="form-control" name="number" type="number" id="memberNumber">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12 text-center mt-2">
                                <button class="btn btn-danger btn-lg">{{ 'landing.button.next'|trans }}</button>
                            </div>
                        </div>
                    </div>
                    </form>
                </div>
            </div>
        </div>
    </main>
{% endblock %}
